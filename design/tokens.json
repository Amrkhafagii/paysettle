{
  "version": "0.1.0",
  "description": "Design system tokens extracted from Phase 0 references for the PaySettle Material 3 theme.",
  "tokens": {
    "color": {
      "brand": {
        "mint": {
          "50": "#F3FBF5",
          "100": "#E0F6E5",
          "200": "#C0ECCB",
          "300": "#9ADFAF",
          "400": "#6FCE90",
          "500": "#29A961",
          "600": "#1F8A4F",
          "700": "#176A3C",
          "800": "#0F4D2A",
          "900": "#0A371D"
        },
        "chart": {
          "spending": "#0ACF83",
          "settlement": "#06B66E",
          "walletPositive": "#1AC96C",
          "walletNegative": "#FF4D62"
        }
      },
      "neutral": {
        "0": "#FFFFFF",
        "50": "#F7F8F6",
        "100": "#EDF0EE",
        "200": "#D9DDD9",
        "300": "#C5CBC5",
        "400": "#A7ADA7",
        "500": "#889088",
        "600": "#5E665E",
        "700": "#404840",
        "800": "#232B23",
        "900": "#111611"
      },
      "semantic": {
        "success": "#0F9D58",
        "warning": "#F4AF41",
        "error": "#E64646",
        "info": "#2F7BFF"
      },
      "surface": {
        "base": "#F9FBF8",
        "card": "#FFFFFF",
        "cardAlt": "#F3F7F2",
        "accent": "#E6F6E8"
      }
    },
    "typography": {
      "fontFamilies": {
        "display": "Work Sans",
        "body": "Manrope",
        "mono": "JetBrains Mono"
      },
      "scales": {
        "displayLarge": {"size": 57, "weight": 600, "lineHeight": 64},
        "displayMedium": {"size": 45, "weight": 600, "lineHeight": 52},
        "headlineLarge": {"size": 32, "weight": 600, "lineHeight": 40},
        "headlineMedium": {"size": 28, "weight": 600, "lineHeight": 36},
        "titleLarge": {"size": 22, "weight": 600, "lineHeight": 28},
        "titleMedium": {"size": 18, "weight": 600, "lineHeight": 24},
        "titleSmall": {"size": 16, "weight": 600, "lineHeight": 22},
        "bodyLarge": {"size": 16, "weight": 500, "lineHeight": 22},
        "bodyMedium": {"size": 14, "weight": 500, "lineHeight": 20},
        "bodySmall": {"size": 12, "weight": 500, "lineHeight": 16},
        "labelLarge": {"size": 14, "weight": 600, "lineHeight": 20},
        "labelMedium": {"size": 12, "weight": 600, "lineHeight": 16},
        "labelSmall": {"size": 11, "weight": 600, "lineHeight": 16}
      }
    },
    "spacing": {
      "4": 4,
      "8": 8,
      "12": 12,
      "16": 16,
      "20": 20,
      "24": 24,
      "32": 32,
      "40": 40,
      "48": 48
    },
    "radius": {
      "xs": 8,
      "sm": 12,
      "md": 16,
      "lg": 24,
      "pill": 999
    },
    "elevation": {
      "level0": {"shadow": "none"},
      "level1": {"x": 0, "y": 8, "blur": 16, "spread": 0, "color": "#1A0F4D1F"},
      "level2": {"x": 0, "y": 16, "blur": 24, "spread": 0, "color": "#120F4D24"}
    },
    "component": {
      "button": {
        "height": 56,
        "radius": "lg",
        "primaryBg": "{color.brand.mint.500}",
        "secondaryBg": "{color.surface.accent}",
        "textColor": "#FFFFFF"
      },
      "chip": {
        "height": 40,
        "radius": 20,
        "bg": "{color.surface.cardAlt}",
        "textColor": "{color.brand.mint.700}"
      },
      "input": {
        "height": 64,
        "radius": "md",
        "borderColor": "{color.brand.mint.200}",
        "bg": "#EBF7EE",
        "textColor": "{color.brand.mint.800}"
      }
    }
  }
}
